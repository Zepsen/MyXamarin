<?xml version="1.0" encoding="utf-8" ?>
<views:BaseContentPage  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Randevy.Views;assembly=Randevy"
             x:Class="Randevy.Views.UserView">

    

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Useeeeeeeeeeeeeeer view"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />

            <Label Text="Id"/>
            <Entry Text="{Binding User.Id}"/>

            <Label Text="Name"/>
            <Entry Text="{Binding User.Name}"/>
                

            <Button Text="Get" 
                    Command="{Binding Get}"/>
            <Button Text="Post" 
                    Command="{Binding Post}"/>
            <Button Text="Delete" 
                    Command="{Binding Delete}"/>
            <Button Text="Put" 
                    Command="{Binding Put}"/>
            <Button Text="Patched" 
                    Command="{Binding Patched}"/>

        </StackLayout>
    </ContentPage.Content>
</views:BaseContentPage>